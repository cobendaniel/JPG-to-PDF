def jpg_to_pdf():
    from PIL import Image
    from os import listdir
    from os.path import isfile, join

    print("Please input the path of the files to be converted")
    path = input()
    print("")

    file_list_1 = [f for f in listdir(path) if isfile(join(path, f))]
    file_list_2 = [i for i in file_list_1 if ".jpg" in i or ".png" in i and "blank" not in i]

    new_list = []
    for a, b in enumerate(file_list_2):
        if a == 0:
            image = Image.open(f"{path}/{b}").convert("RGB")
            print("Image 1 converted")
        else:
            new_list.append(Image.open(f"{path}/{b}").convert("RGB"))
            print(f"Image {a + 1} converted")
            print("")

    print("Please input the name of the file to be saved")
    file_name = input()

    image.save(f"{path}/{file_name}.pdf", save_all = True, append_images = new_list)
    print("")
    print("Conversion complete")
